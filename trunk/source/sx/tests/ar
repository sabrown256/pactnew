#!/bin/csh -f
#
# AR - SX PDB archive test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PDB Archive Test .......... "
set exe = $BinDir/sx
set rpf = 0
@ nerr  = 0

NoteD $Log ""
NoteD $Log -n "                    $msg"
Note $Log ""

if (($THREADING == no) && ($HAVE_MPI == no)) then

   flog $Log rm -f pdbvar.log pdbvar.tar pdbvar.a pdbvar.res

   flog $Log tar cvf pdbvar.tar demo.d?
   flog $Log ar -rsc pdbvar.a demo.d?
   flog $Log ( cat demo.d? >&! pdbvar.blob )

   set Ref = $RootDir/sx/tests/ref/pdbvar
   if ("$Valgrind" == "") then
      flog $Log ($PDBView -l $RootDir/sx/tests/pdbvar.scm >& pdbvar.res)
      set xstatus = $status
      if ($xstatus == 0) then
         if (-f $Ref) then
            flog $Log diff pdbvar.res $Ref
            set xstatus = $status
         else
            flog $Log cp pdbvar.res $Ref
         endif
      endif
   else
      ftee $Log $Valgrind $exe -e -p -q -l $RootDir/sx/tests/pdbvar.scm |& \
      grep "ERROR SUMMARY:"                                             |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   flog $Log touch pdbvar.foo
   set rpf = ( $rpf pdbvar.* )

else
   set xstatus = 0
endif

$TEST_CHECK part -a ar -e $xstatus -rpf "$rpf" none

exit($status)
