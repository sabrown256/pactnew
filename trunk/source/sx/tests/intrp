#!/bin/csh -f
#
# INTRP - SX PDBView interpolation test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDBView Interpolation Test ... "
set exe = $BinDir/sx

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log $RM 3x1.ps

   set opt = ( -l $RootDir/sx/tests/pdbvinterp.scm )
   if ("$Valgrind" == "") then
      flog $Log ($PDBView $opt >& pdbvinterp.tmp)
      set xstatus = $status
      if ($xstatus == 0) then
         grep -i "error" pdbvinterp.tmp > pdbvinterp.err
         set Files = `find . -name "pdbvinterp.err" -size 0c -print`
         if ($#Files == 0) then
            NoteD $Log ""
            set xstatus = 1
         else
            set xstatus = 0
         endif
      endif
   else
      ftee $Log $Valgrind $exe -e -p -q $opt    |& \
      grep "ERROR SUMMARY:"                     |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   set rpf = ( $rpf pdbvinterp.err pdbvinterp.tmp )
   set rpf = ( $rpf 3x1.ps )

$TEST_CHECK part -a intrp -e $xstatus -rpf "$rpf" none

exit($status)
