#!/bin/csh -f
#
# INTRP - SX PDBView interpolation test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDBView Interpolation Test ... "
set exe = $BinDir/sx
set opt = ( -p -e -q $ZeroSpace -l $FilesDir/pdbvinterp.scm )
set io  = pdbvinterp.tmp

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log $RM 3x1.ps

   source ../../../scripts/test-run

   if ($xstatus == 0) then
      grep -i "error" pdbvinterp.tmp > pdbvinterp.err
      set Files = `find . -name "pdbvinterp.err" -size 0c -print`
      if ($#Files == 0) then
         NoteD $Log ""
         set xstatus = 1
      else
         set xstatus = 0
      endif
   endif

   set rpf = ( $rpf pdbvinterp.err pdbvinterp.tmp )
   set rpf = ( $rpf 3x1.ps )

$TEST_CHECK part -a intrp -e $xstatus -rpf "$rpf" none

exit($status)
