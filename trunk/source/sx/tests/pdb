#!/bin/csh -f
#
# PDB - ULTRA PDB test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           PDB TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    SX PDB Test .................. "
   Note $Log ""

   flog $Log cp $TDir/sxpdbg.scm .

   set UTime = `$TIMER -r`
   if ("$Valgrind" == "") then
      flog $Log ($CFE $SX -l $RootDir/sx/tests/sxpdb.scm > sxpdb.res)
      flog $Log (diff sxpdb.res $RootDir/sx/tests/ref/sxpdb > sxpdb.res.diff)
      set xstatus = $status
   else
      ftee $Log $Valgrind $BinDir/sx -e -r -s -l $RootDir/sx/tests/sxpdb.scm |& \
      grep "ERROR SUMMARY:"                                                  |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      flog $Log $RM $Tmp
   endif

   set ETime = `$TIMER -b $UTime`

   if ($xstatus != 0) then
      NoteD $Log "FAILED ($xstatus/$ETime)"
      set Err = 1
   else
      NoteD $Log "PASSED ($ETime)"
      flog $Log rm -f sxpdb.res sxpdb.res.diff
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($Err)
