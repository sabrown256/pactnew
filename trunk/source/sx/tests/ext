#!/bin/csh -f
#
# EXT - SX extensions test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           SX EXTENSIONS TEST

#--------------------------------------------------------------------------

   set ExtDir = ../../applications/extensions
   if ((-d $ExtDir) && (-x $ExtDir/do-test) && (!($?autotool))) then

      NoteD $Log ""
      NoteD $Log -n "                    SX Extension Test ............ "
      Note $Log ""

      flog $Log pushd $ExtDir
      set UTime = `$TIMER -r`
      flog $Log ./do-test
      set xstatus = $status
      set ETime   = `$TIMER -b $UTime`
      flog $Log popd

      if (($xstatus == 254) || ($xstatus == 255)) then
         NoteD $Log "OMITTED ($xstatus/$ETime)"
      else if ($xstatus != 0) then
         NoteD $Log "FAILED ($ETime)"
         set Err = 1
      else
         NoteD $Log "PASSED ($ETime)"
      endif
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK -a ext -e $Err part

exit($status)
