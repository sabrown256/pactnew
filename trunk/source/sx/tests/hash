#!/bin/csh -f
#
# HASH - SX HASH test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX HASH Test ................. "
set exe = $BinDir/sx
set rpf = 0
@ nerr  = 0

   set sys = `uname`

   if (("$sys[1]" != "AIX") && ("$LARGE_FILES" == ""))  then
      NoteD $Log ""
      NoteD $Log -n "                    $msg"
      Note $Log ""

      set UTime = `$TIMER -r`
      set opt = ( -l $RootDir/sx/tests/sxhash.scm )
      if ("$Valgrind" == "") then
         flog $Log ($SX $opt > sxhash.res.tmp)
         set xstatus = $status
         if ($xstatus == 0) then
            cat sxhash.res.tmp          | \
            sed -e '/diskaddr =/d'        \
                -e '/size =/d'            \
                -e '/alignment =/d'       \
                -e '/member_offs =/d'     \
                -e '/cast_offs =/d'       \
                -e '/number =/d'          \
                -e '/bpi =/d'             \
                -e '/order/d'             \
                -e '/format/d'            \
                -e 's/ . 0 5 7 6.98/ d 0 5 7 6.98/g'   \
                -e 's/long_long/long/g'   \
                -e 's/#([^A-Za-z)]*)//g' > sxhash.res

            flog $Log (diff -b sxhash.res $RootDir/sx/tests/ref/sxhash > sxhash.res.diff)
            set xstatus = $status
         endif
      else
         ftee $Log $Valgrind $exe -e -r -s $opt   |& \
         grep "ERROR SUMMARY:"                    |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         set rpf     = ( $rpf $Tmp )
      endif

      set rpf = ( $rpf sxhash.res.tmp sxhash.res sxhash.res.diff )
   endif

$TEST_CHECK part -a hash -e $xstatus -rpf "$rpf" none

exit($status)
