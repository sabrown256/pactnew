#!/bin/csh -f
#
# NET - PDB net test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB Net Test ....................... "
set exe = $BinDir/pdntst

NoteD $Log ""
NoteD $Log "                    $msg"
Note $Log ""

set opt = ( -v $tst )
if ("$Valgrind" == "") then
   ftee $Log $CFE $exe $opt
   set xstatus = $status
else
   ftee $Log $Valgrind $exe $opt           |& \
   grep "ERROR SUMMARY:"                   |& \
   awk '{ print $4 }'   >&! $Tmp
   set xstatus = `cat $Tmp`
   set rpf     = ( $rpf $Tmp )
endif

$TEST_CHECK part -a net -e $xstatus -x $exe -rpf "$rpf" "$msg"

exit($status)

