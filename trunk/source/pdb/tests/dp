#!/bin/csh -f
#
# DP - PDB distributed parallel test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB Distributed Parallel Test ...... "
set exe = $BinDir/pddpts

if ("$MPI" != "") then
   NoteD $Log ""
   NoteD $Log "                    $msg"
   NoteD $Log ""

   flog $Log pushd $SrcDir
   flog $Log $MAKE dp
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         ERROR Building Distributed Parallel Tests"
      NoteD $Log "                    ${msg}FAILED"

   else
      if (-x $PFE) then

         flog $Log $PFE -dr -p 2 -t 0 $exe -v $tst
         ftee $Log ( $PFE -p 2 -t 0 $exe -v $tst |& awk '$1 !~ /MPI/ && $1 !~ /ERROR/ && $1 !~ /srun/ {print}' | grep -v filenoexist | grep -v salloc )
         set xstatus = $status

      else
         Note $Log "No MPI - test omitted"
         set xstatus = 255
      endif

      $TEST_CHECK part -a dp -e $xstatus -x $exe "$msg"

      set xstatus = $status

   endif
endif

exit($xstatus)
