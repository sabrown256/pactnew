#!/bin/csh -f
#
# MATRIX - PML matrix tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                             PML MATRIX TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log  -n "                    PML Matrix Test ........ "

   flog $Log pushd $SrcDir
   flog $Log $MAKE matrix
   set TStatus = $status
   flog $Log popd

   set UTime = `$TIMER -r`

   if ($TStatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PML Matrix Test Program"
      set xstatus = $TStatus
   else
      if ("$Valgrind" == "") then
         flog $LogF $CFE $BinDir/mlmtrt
         set xstatus = $status
      else
         flog $Log $Valgrind $BinDir/mlmtrt
         set xstatus = $status
      endif
      if ($xstatus != 0) then
        NoteD $Log ""
        NoteD $Log "                         Error in Matrix Test program"
      endif
   endif

   set ETime = `$TIMER -b $UTime`

   if (($xstatus == 254) || ($xstatus == 255)) then
      NoteD $Log  "                    PML Matrix Test ........ OMITTED ($xstatus/$ETime)"
   else if ($xstatus != 0) then
      NoteD $Log  "                    PML Matrix Test ........ FAILED ($ETime)"
      @ Err = 1
   else
      NoteD $Log "PASSED ($ETime)"
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($Err)

