#!/bin/csh -f
#
# CSOLV - PML conjugate gradient solver tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                             PML CG SOLVER TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    PML CG Solver Test ..... "

   set FAIL = "NO"

   flog $Log pushd $SrcDir
   flog $Log $MAKE cgsolv
   set TStatus = $status
   flog $Log popd

   set UTime = `$TIMER -r`

   if ($TStatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PML CG Solver Test Program"
      set xstatus = $TStatus
   else
      if ("$Valgrind" == "") then
         flog $LogF $CFE $BinDir/mlcgts
         set xstatus = $status
      else
         flog $Log $Valgrind $BinDir/mlcgts
         set xstatus = $status
      endif
      if ($xstatus != 0) then
         NoteD $Log ""
         NoteD $Log "                         Error in CG Solver Test Program"
      endif

   endif

   set ETime = `$TIMER -b $UTime`

   if (($xstatus == 254) || ($xstatus == 255)) then
      NoteD $Log "                    PML CG Solver Test ..... OMITTED ($xstatus/$ETime)"
   else if ($xstatus != 0) then
      NoteD $Log "                    PML CG Solver Test ..... FAILED ($ETime)"
      @ Err = 1
   else
      NoteD $Log "PASSED ($ETime)"
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($Err)
