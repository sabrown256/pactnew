#!/bin/csh -f
#
# EIGEN - PML eigen system tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PML Eigen Test ......... "
set exe = $BinDir/mlevts

   NoteD $Log ""
   NoteD $Log  -n "                    $msg"

   flog $Log pushd $SrcDir
   flog $Log $MAKE eigen
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PML Eigen Test Program"
   else
      if ("$Valgrind" == "") then
         flog $LogF $cfe $exe
         set xstatus = $status
      else
         flog $Log $Valgrind $exe
         set xstatus = $status
      endif
   endif

$TEST_CHECK part -a eigen -e $xstatus -x $exe none

exit($status)


