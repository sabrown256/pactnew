#!/bin/csh -f
#
# CSUM - PML checksum tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PML Checksum Test ...... "
set exe = $BinDir/mlckts

   NoteD $Log ""
   NoteD $Log -n "                    $msg"

   flog $Log pushd $SrcDir
   flog $Log $MAKE checksum
   set xstatus = $status
   set Ref     = $cwd/tests/ref/checksum
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PML Checksum Test Program"
   else
      if ("$Valgrind" == "") then
         flog $Log ($CFE $exe $RootDir/pml/mlcmsh.c >&! checksum.res)
         set xstatus = $status
      else
         flog $Log $Valgrind $exe $RootDir/pml/mlcmsh.c
         set xstatus = $status
      endif

      if ((-f $Ref) && ("$Valgrind" == "") && ($xstatus == 0)) then
         flog $Log (diff checksum.res $Ref >&! checksum.diff)
         set xstatus = $status
      endif
   endif

$TEST_CHECK part -a csum -e $xstatus -x $exe none

exit($status)

