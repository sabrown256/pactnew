#
# TYPES.DB - master table for PACT type management system
#          - it must be defined here to be managed
#          - all other PACT type handling is generated from this
#
# include <cpyright.h>
#

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# STANDARD - standard type table
#          - type fields are:
#          -    type  - C type name quoted to capture white space,
#          -            e.g. "long long"
#          -    sgnd  - signed type name
#          -    usgnd - unsigned type name
#          -    name  - abbreviate name to use in generated function names
#          -    kind  - enumerated type kind: bool, int, float, complex, etc
#          -    ptr   - generate "foo *" for "foo" iff TRUE
#          -    min   - minimum value of type
#          -    max   - maximum value of type
#          -    def   - default value of type
#          -    f90   - F90 type name for the C type
#          -    promo - type to which it is promoted in C calls/assignments
#          -    comp  - unit type of which composite types are formed
# for sgnd/usgnd the following apply:
#   -       the signed/unsigned name is the same as type
#   +       the signed/unsigned name is the same as type prefixed with
#           either signed or unsigned as appropriate
#   <name>  is used as the literal signed/unsigned type name

standard = {
# type                  name   kind       ptr   min        max         def    f90           promo    comp            sgnd      usgnd
 "unknown"              unk    OTHER      B_F   -          -           -      -             -        -               -         -
 "bit"                  bit    OTHER      B_F   -          -           -      -             -        -               -         -
 "struct"               strct  OTHER      B_F   -          -           -      -             -        -               -         -
 "void"                 any    OTHER      B_T   -          -           NULL   void          -        -               -         -
 "bool"                 bool   BOOL       B_T   BOOL_MIN   BOOL_MAX    FALSE  logical       int      -               -         -
 "char"                 chr    CHAR       B_T   SCHAR_MIN  SCHAR_MAX   '\0'   character     int      -               +         +
 "wchar_t"              wchr   CHAR       B_T   WCHAR_MIN  WCHAR_MAX   0      -             int      -               "wchar_t" "wchar_t"
 "int8_t"               int8   INT        B_T   INT8_MIN   INT8_MAX    0      integer(1)    int      -               -         "u_int8_t"
 "short"                shrt   INT        B_T   SHRT_MIN   SHRT_MAX    0      integer(2)    int      -               +         +
 "int"                  int    INT        B_T   INT_MIN    INT_MAX     0      integer       -        -               +         +
 "long"                 lng    INT        B_T   LONG_MIN   LONG_MAX    0L     integer(8)    -        -               +         +
 "long long"            ll     INT        B_T   LLONG_MIN  LLONG_MAX   0LL    integer(8)    -        -               +         +
 "float"                flt    FLOAT      B_T   -FLT_MAX   FLT_MAX     0.0    real(4)       double   -               -         -
 "double"               dbl    FLOAT      B_T   -DBL_MAX   DBL_MAX     0.0    real(8)       -        -               -         -
 "long double"          ldbl   FLOAT      B_T   -LDBL_MAX  LDBL_MAX    0.0    real(16)      -        -               -         -
 "float _Complex"       fcx    COMPLEX    B_T   -FLT_MAX   FLT_MAX     0.0    complex(4)    -        "float"         -         -
 "double _Complex"      dcx    COMPLEX    B_T   -DBL_MAX   DBL_MAX     0.0    complex(8)    -        "double"        -         -
 "long double _Complex" ldcx   COMPLEX    B_T   -LDBL_MAX  LDBL_MAX    0.0    complex(16)   -        "long double"   -         -
 "quaternion"           qut    QUATERNION B_T   -DBL_MAX   DBL_MAX     Q_ZERO -             -        "double"        -         -
 "FILE"                 file   STRUCT     B_T   -          -           NULL   -             -        -               -         -
}

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# ALIAS - alias table
#       - aliases imply the same variables for the new name
#       - alias fields are:
#       -    new name - name of the new type in quotes
#       -    old name - name of the existing type in quotes
#       -    ptr      - generate "foo *" for "foo" iff TRUE

alias = {
# new name        existing               ptr
 "enum"           "int"                   B_F
 "pboolean"       "int"                   B_T
 "size_t"         "unsigned long"         B_T
 "ssize_t"        "long"                  B_T
 "integer"        "int"                   B_T
 "int16_t"        "short"                 B_T
 "int32_t"        "int"                   B_T
 "int64_t"        "long long"             B_T
 "REAL"           "double"                B_T
 "float32_t"      "float"                 B_T
 "float64_t"      "double"                B_T
 "float128_t"     "long double"           B_T
 "complex32_t"    "float _Complex"        B_T
 "complex64_t"    "double _Complex"       B_T
 "complex128_t"   "long double _Complex"  B_T
}

