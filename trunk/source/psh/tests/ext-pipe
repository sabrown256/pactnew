#!/bin/csh -f
#
# EXT-PIPE - test aexec with old shell pipe syntax
#

@ err = 0

source $TestScrDir/env-csh

alias pe  'unsetenv astatus ; echo "" ; echo "Command: \!*" ; aexec \!* ; dbget astatus'

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo "------------------------------------------------------------------------"
echo ""
echo "# simple stdout variants"

   pe /bin/echo foo '|' cat -n >&! ext-p1.res
   cat ext-p1.res
   echo "> astatus = $astatus"
   if ("$astatus" != "0 0") then
      @ err = $err + 1
      echo "p1 failed"
   else
      rm -f ext-p1.res
      echo "p1 passed"
   endif

echo ""
echo "------------------------------------------------------------------------"
echo ""
echo "# simple bonded stdout/stderr variants"

   pe ls ext-* foo.h '|' cat -n >&! ext-p2.res
   cat ext-p2.res
   echo "> astatus = $astatus"
   if ("$astatus" != "2 0") then
      @ err = $err + 1
      echo "p2 failed"
   else
      rm -f ext-p2.res
      echo "p2 passed"
   endif

   pe ls ext-* foo.h '|&' cat -n >&! ext-p3.res
   cat ext-p3.res
   echo "> astatus = $astatus"
   if ("$astatus" != "2 0") then
      @ err = $err + 1
      echo "p3 failed"
   else
      rm -f ext-p3.res
      echo "p3 passed"
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo ""

exit($err)
