#!/bin/csh -f
#
# EXT-FILE - test aexec with files
#


@ err = 0

alias pe  'echo "" ; echo "Command: \!*" ; aexec "\!*"'
alias pg  'echo "" ; echo "Command: \!*" ; eval `aexec "\!*"`'

#set echo 
#set verbose

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo "------------------------------------------------------------------------"
echo ""
echo "# simple stdout variants"

   rm -rf foo
   pg date @o fw:foo
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple stdin variants"

   pe cat @i fr:foo
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple append variants"

   pe date @o2 fa:foo
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple bonded variants"

   pe date @b2 fw:foo
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# non-simple stdout variants"

   rm -rf foo
   pg date @o2 @e3 fw:foo @ fw:bar
   echo "> foo     = `cat foo`"
   echo "> bar     = `cat bar`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

   rm -rf foo
   pg ls ext-* foo.h @o2 @e3 fw:foo @ fw:bar
   echo "> foo     = `cat foo`"
   echo "> bar     = `cat bar`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo ""

exit($err)
