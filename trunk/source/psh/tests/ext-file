#!/bin/csh -f
#
# EXT-FILE - test aexec with files
#


@ err = 0

alias pe  'echo "" ; echo "Command: \!*" ; aexec "\!*"'
alias pg  'echo "" ; echo "Command: \!*" ; eval `aexec "\!*"`'

#set echo 
#set verbose

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo "------------------------------------------------------------------------"
echo ""
echo "# simple stdout variants"

   rm -rf foo
   pg date @o aexec -f foo -r
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple stdin variants"

   pe cat @i aexec -f foo -w
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple append variants"

   pe date @o2 aexec -f foo -rw
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"

echo "------------------------------------------------------------------------"
echo ""
echo "# simple bonded variants"

   pe date @b2 aexec -f foo -r
   echo "> foo     = `cat foo`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

echo "------------------------------------------------------------------------"
echo ""
echo "# non-simple stdout variants"

   rm -rf foo
   pg date @o2 @e3 aexec -f foo -r @ aexec -f bar -r
   echo "> foo     = `cat foo`"
   echo "> bar     = `cat bar`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

   rm -rf foo
   pg ls aexec.c foo.h @o2 @e3 aexec -f foo -r @ aexec -f bar -r
   echo "> foo     = `cat foo`"
   echo "> bar     = `cat bar`"
   echo "> xstatus = $xstatus"
   echo "status = $status"

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

echo ""

exit($err)
