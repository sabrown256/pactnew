#!/bin/csh -f
#
# BSYNT - SCHEME Basis syntax tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCHEME Basis Syntax Test ..... "
set rpf = none

   if (($do_syntax == 0) && (-d $RootDir/scheme/syntax/m)) then
      NoteD $Log ""
      NoteD $Log -n "                    $msg"
      Note $Log ""

      flog $Log cp $FilesDir/shmtst.m .

      if ("$Valgrind" == "") then
         $CFE $BinDir/scheme -e -l shmtst.m >! shmtst.res
         set xstatus = $status
         if ($xstatus == 0) then
            diff shmtst.res $FilesDir/ref/shmtst >! shmtst.res.diff
            set xstatus = $status
         endif
      else
         ftee $Log $Valgrind $BinDir/scheme -e -l shmtst.m    |& \
         grep "ERROR SUMMARY:"                                |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         set rpf     = ( $rpf $Tmp )
      endif

$TEST_CHECK part -a bsynt -e $xstatus -rpf "$rpf" none

exit($status)
