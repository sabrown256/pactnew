#!/bin/csh -f
#
# MEM - SCHEME memory tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCHEME Memory Test ........... "
set rpf = none

   NoteD $Log ""
   NoteD $Log -n "                    $mem"
   Note $Log ""

   flog $Log pwd
   flog $Log cp $FilesDir/mmtst.scm .

   if ("$Valgrind" == "") then
      flog $Log $cfe $BinDir/scheme -e -l $FilesDir/mmtst.scm
      set xstatus = $status
   else
      ftee $Log $Valgrind $BinDir/scheme -e -l $FilesDir/mmtst.scm  |& \
      grep "ERROR SUMMARY:"                                         |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   set rpf = ( $rpf '#tmp#' mmtst.scm )

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a mem -e $xstatus -rpf "$rpf" "$msg"

exit($status)
