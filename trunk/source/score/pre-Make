	${CLD} ${LdFlags} tscio.c -o ${BinDir}/tscio ${Libs}

${BinDir}/tscbf : tscbf.c ${TGTLib}
	${CLD} ${LdFlags} tscbf.c -o ${BinDir}/tscbf ${Libs}

