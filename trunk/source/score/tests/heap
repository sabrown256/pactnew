#!/bin/csh -f
#
# HEAP - test heap management facilities in SCORE
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCORE Heap Check Test ........."
set exe = $BinDir/tscmtr
set opt = ""
set io  = flog

NoteD $Log ""
NoteD $Log -n "                    $msg"
Note $Log ""

if (($?STATIC_LINKING == 0) && ("$HaveDevZero" == "HAVE_DEV_ZERO")) then
   flog $Log pushd $SrcDir
   flog $Log $MAKE -i memchk
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log "                         ERROR Building Heap Check Test Program"
      NoteD $Log "                    ${msg} FAILED"
   else
      if ("$CFE" != "") then
         setenv CFE   "$CFE -v"
      endif

      source ../../../scripts/test-run
   endif
endif

$TEST_CHECK part -a heap -e $xstatus -dt $dt -x $exe -rpf "$rpf" none

exit($status)


