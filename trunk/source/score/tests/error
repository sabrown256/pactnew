#!/bin/csh -f
#
# ERROR - test SCORE error handling
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCORE Error Test .............. "
set exe = $BinDir/scerts

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   NoteD $Log ""

   flog $Log pushd $SrcDir
   flog $Log $MAKE error
   set xstatus = $status
   flog $Log popd

   if ("$Valgrind" == "") then
      ftee $Log $CFE $exe
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe        |& \
      grep "ERROR SUMMARY:"           |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

$TEST_CHECK part -a error -e $xstatus -x $exe -rpf "$rpf" "$msg"

exit($status)

