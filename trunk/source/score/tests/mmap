#!/bin/csh -f
#
# MMAP - test memory mapped I/O facilities in SCORE
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

if ($CROSS_COMPILE == FALSE) then

   NoteD $LogF ""
   NoteD $LogF -n "                    SCORE Mapped File Test ...... "
   NoteD $LogF ""

   set UTime = `$TIMER -r`
   flog $LogF pushd $SrcDir
   flog $LogF $MAKE mf
   set xstatus = $status
   flog $LogF popd

   if ($xstatus == 0) then
      if ("$Valgrind" == "") then
         ftee $LogF $CFE $BinDir/scmfts
         set xstatus = $status
      else
         ftee $LogF $Valgrind $BinDir/scmfts   |& \
         grep "ERROR SUMMARY:"                 |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         flog $LogF $RM $Tmp
      endif
   endif

   set ETime = `$TIMER -b $UTime`

   flog $LogF rm -f mft.*

   if (($xstatus == 254) || ($xstatus == 255)) then
      NoteD $LogF "                    SCORE Mapped File Test ...... OMITTED ($xstatus/$ETime)"
   else if ($xstatus != 0) then
      NoteD $LogF "                    SCORE Mapped File Test ...... FAILED ($xstatus/$ETime)"
#      set Err = 1
   else
      NoteD $LogF "                    SCORE Mapped File Test ...... PASSED ($ETime)"
   endif

endif

exit($Err)

