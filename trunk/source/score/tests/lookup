#!/bin/csh -f
#
# LOOKUP - test hash tables and trees in SCORE
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

flog $Log pushd $SrcDir
flog $Log $MAKE ha
set xstatus = $status
flog $Log popd

if ($xstatus != 0) then
   NoteD $Log "                         ERROR Building HASH Test Program"
else

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# HASH test

   set msg = "SCORE HASH Test ..............."
   set exe = $BinDir/tsca
   set rpf = none
   set opt = ""
   set io  = ftee

   NoteD $Log ""
   NoteD $Log "                    $msg"
   Note $Log ""

   source ../../../scripts/test-run

   $TEST_CHECK part -a lookup_hash -e $xstatus -dt $dt -x $exe -rpf "$rpf" "$msg"

   @ nerr = $nerr + $status

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# TREE test

   set msg = "SCORE TREE Test ..............."
   set exe = $BinDir/tsctr
   set rpf = none
   set opt = ""
   set io  = flog

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   source ../../../scripts/test-run

   $TEST_CHECK part -a lookup_tree -e $xstatus -dt $dt -x $exe -rpf "$rpf" none

   @ nerr = $nerr + $status

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

endif

$TEST_CHECK part -a lookup -e $nerr

exit($status)

