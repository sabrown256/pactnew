#!/bin/csh -f
#
# IO - test I/O facilities in SCORE
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCORE I/O Test ................ "
set exe = $BinDir/sciots

NoteD $Log ""
NoteD $Log "                    $msg"

flog $Log pushd $SrcDir
flog $Log $MAKE io
set xstatus = $status
flog $Log popd

if ($xstatus == 0) then
   if ("$Valgrind" == "") then
      ftee $Log $CFE $exe
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe         |& \
      grep "ERROR SUMMARY:"            |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif
endif

set rpf = ( $rpf sciots.txt )

$TEST_CHECK part -a io -e $xstatus -x $exe -rpf "$rpf" "$msg"

exit($status)

