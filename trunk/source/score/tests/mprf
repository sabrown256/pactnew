#!/bin/csh -f
#
# MPRF - test performance of SCORE MM
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCORE MM Performance Test ..... "
set exe = $BinDir/scmpft

NoteD $LogF ""
NoteD $LogF "                    $msg"

flog $LogF pushd $SrcDir
flog $LogF $MAKE memchk
set xstatus = $status
flog $LogF popd

if ($xstatus != 0) then
   NoteD $LogF "                         ERROR Building MM Performance Program"
   NoteD $LogF "                    ${mgs}FAILED"
else

   set opt = ( -m 1 )
   if ("$Valgrind" == "") then
      ftee $LogF $CFE $exe $opt
      set xstatus = $status
   else
      ftee $LogF $Valgrind $exe $opt      |& \
      grep "ERROR SUMMARY:"               |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif
endif

$TEST_CHECK part -a mprf -e $xstatus -x $exe -rpf "$rpf" "$msg"

exit($status)

