#!/bin/csh -f
#
# IO - ULTRA I/O test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           I/O TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    ULTRA I/O Test ............... "
   Note $Log ""

   set rpf = none

   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra -l $TDir/uliot.scm >& uliot.log)
      set xstatus = $status
   else
      ftee $Log $Valgrind $BinDir/ultra -e -r -x -q -s -l $TDir/uliot.scm  |& \
      grep "ERROR SUMMARY:"                                                         |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = $Tmp
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a io -e $xstatus -rpf "$rpf" none

exit($status)
