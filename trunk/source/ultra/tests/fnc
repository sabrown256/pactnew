#!/bin/csh -f
#
# FNC - ULTRA function test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           FUNCTION TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    ULTRA FNC Test ............... "
   Note $Log ""

   set rpf = none

   flog $Log $RM ulfnc.log ultest.err

   set UTime = `$TIMER -r`
   if ("$Valgrind" == "") then

# CYGWIN 1.5 simply will not write output to ulfnc.log
# the other tests are fine
      if ($OS =~ CYGWIN*) then
         flog $Log $cfe $Ultra -l $TDir/ulfnc.scm
         set xstatus = $status
      else
         flog $Log ($CFE $Ultra -l $TDir/ulfnc.scm >& ulfnc.log)
         set xstatus = $status
         flog $Log (grep -i "error" ulfnc.log > ultest.err)
         set Files = `find . -name "ultest.err" -size 0c -print`
      endif
   else
      ftee $Log $Valgrind $BinDir/ultra -e -r -x -q -s -l $TDir/ulfnc.scm  |& \
      grep "ERROR SUMMARY:"                                                         |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = $Tmp
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a fnc -e $xstatus -rpf "$rpf" none

exit($status)
