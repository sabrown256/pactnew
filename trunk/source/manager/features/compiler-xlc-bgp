#
# COMPILER-XLC-BGP - IBM XLC compilers on BG/P
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

WARN_PATTERN = "WARNING: (E) (W) (I)"
ERR_PATTERN  = "Error: (S)"

setenv OBJECT_MODE ${Bits}
#XArch = -qarch=ppc
#XArch = ""
XArch = -qarch=450

Tool CC {
   Exe       = mpixlc
   Flags     = ${XArch} -D_ALL_SOURCE -qsuppress=1500-010:1506-1300:1506-1298:1506-383:1506-377
   Flags    += [ _env_ = Bits ;              # address bit size
                 *     = -q* ]
   Flags    += [ _cmd_ = -p ;                # profiling
	         on    = -qpdf1 ]
   Debug     = -g -qnooptimize
   Optimize  = -g -O -qmaxmem=32768
   Version   = -qversion
}

Tool FC {
   Exe     = mpixlf77
   Flags   = ${XArch} -qrecur
   Flags  += [ _env_ = Bits ;                # address bit size
               *     = -q* ]
   Flags  += [ _cmd_ = -p ;                  # profiling
	       on    = -qpdf1 ]
   Version = -qversion
}

Tool LD {
   Lib = -lc
}

Tool Lex {
   Flags  = ${XArch} -D_ALL_SOURCE -D_LARGE_FILES -qsuppress=1506-1300:1506-1298:1506-377
   Flags += [ _env_ = Bits ;                 # address bit size
              *     = -q* ]
}

Tool Cfg_Lex {
   Flags = -w
}

Group Cfg {
   Use         = Std
   CC_Exe      = gcc
   CC_Flags    = -g
   CC_Debug    = -Wall
   CC_Optimize = -O -Wunused
   CC_Version  = -v
   LD_Lib      = -lc
   FC_Exe      = gfortran
   LD_Flags    = ${LD_Flags}
}

Group PThread {
   CC_Exe   = mpixlc_r
   FC_Exe   = mpixlf77_r
   LD_Flags = -qsmp
   LD_Lib   = -lpthread 
}

Group OpenMP {
   CC_Exe = mpixlc_r
   FC_Exe = mpixlf77_r
   LD_Lib =
}

Group MPI {
   CC_Exe = mpixlc
   FC_Exe = mpixlf77
}

.c.i:
	${CC} -P $<

.f.o:
	${FC} ${FFLAGS} ${LDFLAGS} -c $<

setenv CROSS_COMPILE  BGP
setenv IBM_BGP
define IBM_BGP
define GETSOCKNAME_LONG


