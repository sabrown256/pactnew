#!/bin/csh -f
#
# CSH - analyze the platform C Shell
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

set Me = $0
source $Me:h/common

Note $ALog "----- analyze/csh -----"
Note $ALog "Analyze: C shell"
Note $ALog ""

set inf = ( `ls -l /bin/csh` )
@ n = $#inf
if ("$inf" =~ *-\>*) then
   set exe = ( `which $inf[$n]` )
else
   set exe = "/bin/csh"
endif

source $AnaDir/backslash

if ("$BackSlash" == "\") then
   NoteD $ALog "   CSH: $exe (uses \)"
else
   NoteD $ALog "   CSH: $exe (uses \\\\)"
endif

dbexp BackSlash

exit(0)
