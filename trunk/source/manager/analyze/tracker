#!/bin/csh -f
#
# TRACKER - analyze tracker availability
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

set Me = $0
source $Me:h/common

Separator $Log
Note $Log "Analyze: tracker"

dbini HAVE_TRACKER ""
dbini TRACKER_Exe  ""
dbini DAS_ROOT     "/usr/local"

foreach d ( /usr/apps/tracker $DAS_ROOT/tracker /usr /usr/local )
   if (-d $d) then
      set OK = FALSE
      if (-x $d/bin/tracker) then

# if it works we will get a help message if not
# maybe some complaints about missing so's
         fexec $ALog $d/bin/tracker @b grep "help screen for more information
         if ($gstatus[2] == 0) then
            setenv TRACKER_Exe $d/bin/tracker
            setenv HAVE_TRACKER TRUE
            break
         endif
      endif
   endif
end

# export the results
dbexp HAVE_TRACKER
dbexp TRACKER_Exe

exit(0)

