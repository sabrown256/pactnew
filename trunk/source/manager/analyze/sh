#!/bin/csh -f
#
# SH - analyze the platform Bourne Shell
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

set Me = $0
source $Me:h/common

Note $ALog "----- analyze/sh -----"
Note $ALog "Analyze: Bourne shell"
Note $ALog ""

setenv DEFAULT_SHELL ""

foreach i ($path /usr/bin /bin)
   if (-x $i/bash) then
      NoteD $ALog "   SH: $i/bash"
      setenv DEFAULT_SHELL $i/bash
      dbexp DEFAULT_SHELL
      exit(0)
   endif
end

foreach i ($path /usr/bin /bin)
   if (-x $i/sh) then
      NoteD $ALog "   SH: $i/sh"
      setenv DEFAULT_SHELL $i/sh
      dbexp DEFAULT_SHELL
      exit(0)
   endif
end

dbexp DEFAULT_SHELL

exit(1)
