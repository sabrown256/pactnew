#!/bin/csh -f
#
# USE-PGI - decide on the correct PGI environment
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

unalias *

source ../scripts/env-csh

set Which   = "$cwd/pwhich"
set CmpPath = ""
while ($#argv > 0)
   switch ($1)
      default:
           if ("$CmpPath" == "") then
              set CmpPath = $1
           endif
           breaksw
   endsw
   shift
end

# if blank find pgcc on your path
if ("$CmpPath" == "") then
   set CmpPath = ( `$Which pgcc` )

# if not a full path find it on your path
else if ("$CmpPath" !~ /*) then
   set CmpPath = ( `$Which $CmpPath` )
endif

if (-xf "$CmpPath") then
   set CCRoot = $CmpPath:h
   set CCRoot = $CCRoot:h
else if (-x "$CmpPath/bin/pgcc") then
   set CCRoot = $CmpPath
endif

set Exe   = $CCRoot/bin/pgcc
set Info  = ( `$Exe -V |& grep pgcc` )
set lvers = $Info[2]
set SDir  = $CCRoot/bin

expr "$lvers" '>' "7.0" >& /dev/null
if ($status == 0) then
   setenv NUMA  "-Mconcur=numa"
else
   expr "$lvers" '>' "6.2" >& /dev/null
   if ($status == 0) then
      setenv NUMA  "-Mconcur=nonuma"
   else
      setenv NUMA  ""
   endif
endif

setenv PATH             $SDir':$PATH'
setenv PACT_CC_FAMILY   PGI
setenv PACT_CC_VERSION  $lvers
setenv PACT_CC_PATH     $CCRoot
setenv PACT_CC_EXE      $Exe

SetParent PATH
SetParent PACT_CC_FAMILY
SetParent PACT_CC_VERSION
SetParent PACT_CC_PATH
SetParent PACT_CC_EXE
SetParent NUMA

exit(0)

