MPI : aprun {

# aprun/mpich has good I/O behaviour so mpi-io-wrap is not needed
   Env Wrap = ""

   Exe   = aprun
   Flags = -n $NProc
   Flags = ($?DO_RUN_APRUN_ENV == 0) ? $MPI_Flags : $MPI_Flags $DO_RUN_APRUN_ENV

   Cmd = $MPI_Exe $DBG_Delim $DBG_Exe $MPI_Flags $Code $CArgs
}

