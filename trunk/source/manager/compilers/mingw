#
# MINGW - define GNU compiler for MINGW
#
# include "cpyright.h"
#

Group OCV {
#   MINGW   = [ _env_ = Bits ;
#               32    = i586-mingw32msvc ;
#               64    = i686-w64-mingw32 ]
   MINGW   = i686-w64-mingw32
   CC      = ${OCV_MINGW}-gcc
   CXX     = ${OCV_MINGW}-g++
   FC      = ${OCV_MINGW}-gfortran
   LD      = ${OCV_MINGW}-ld
   Bits    =
   PIC     =
   RPath   = -Wl,-rpath,@
   LD      =
   LD_Lib  = -lwsock32
   CC_Sh   =
   Sh      = -shared
   ShLb    =
   OMP_Lib = -lgomp
   StackP  = 
}

run analyze/rpath -a /usr/${OCV_MINGW}/lib
run analyze/rpath -a /usr/lib/gcc/${OCV_MINGW}/4.6

include compilers/gnu

Tool MAKE {
   UseGNU = TRUE
}

Tool Ranlib {
   Exe = ${OCV_MINGW}-ranlib
}

Tool NM {
   Exe = /usr/bin/${OCV_MINGW}-nm
   Cmd = $NM_Exe
}

Group HSY {
   CPU = x86
}

Group FPE {
   Exe    = ${OCV_CC}
   Flags  = -g -Wall
}

