#
# MINGW - define GNU compiler for MINGW
#
# include "cpyright.h"
#

Group OCV {
   CC      = [ _env_ = Bits ;                 # compiler version
               32    = i586-mingw32msvc-gcc ;
               64    = i686-w64-mingw32-gcc ]
   CXX     = [ _env_ = Bits ;                 # compiler version
               32    = i586-mingw32msvc-g++ ;
               64    = i686-w64-mingw32-g++ ]
   FC      = [ _env_ = Bits ;                 # compiler version
               32    = i586-mingw32msvc-gfortran ;
               64    = i686-w64-mingw32-gfortran ]
   LD      = [ _env_ = Bits ;                 # linker version
               32    = i586-mingw32msvc-ld ;
               64    = i686-w64-mingw32-ld ]
   Bits    =
   PIC     =
   RPath   = -Wl,-rpath,@
   LD      =
   LD_Lib  = -lwsock32
   CC_Sh   =
   Sh      = -shared
   ShLb    =
   OMP_Lib = -lgomp
}

run analyze/rpath gnu

include compilers/gnu

Tool MAKE {
   UseGNU = TRUE
}

Tool Ranlib {
   Exe = i686-w64-mingw32-ranlib
}

Tool NM {
   Exe = /usr/bin/i686-w64-mingw32-nm
   Cmd = $NM_Exe
}

Group HSY {
   CPU = x86
}

Group FPE {
   Exe    = ${OCV_CC}
   Flags  = -g -Wall
}

