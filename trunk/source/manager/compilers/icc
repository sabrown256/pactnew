run analyze/rpath -a /usr/${LIB}
run analyze/rpath intel

Tool CC {
   Exe       = icc
   Flags     = -wd71,72,161,188,267,1357
   Flags    += [ _env_ = STD_C ;                # C standard flags
                 C89   = -std=c89 ;
                 C99   = -std=c99 ;
                 X89   = -std=gnu89 ;           # gcc default
                 X99   = -std=gnu99 ]
   Flags    += [ _env_ = Bits ;
                 64    = -fPIC ]
   Flags    += [ _cmd_ = -p ;                   # profiling
	         on    = -qp ]
   Debug     = -g
   Optimize  = -g
# Use this when icc PML Function test bug is fixed
#   Optimize = -g -O1
   Version  = -V
}

Tool FC {
   Exe     = ifort
   Flags   = -free
   Version = -V
}

Tool CXX {
   Exe       = icpc
   Flags     = 
   Debug     = -g
   Optimize  = -g
   Version   = -V
}

Tool LD {
   RPath  = ${OCV_RPath}
   Flags += ${OCV_LD}
   Lib    = -lc
}

Tool Lex {
   Flags = -wd177,266
}

Group AF {
   PATTERN_WARN = ":+sp+warning+sp+"
   PATTERN_ERR  = ":+sp+error:"
}

Group Cfg {
   Use      = Std
   LD_Flags = ${LD_Flags}
   LD_Lib   =
}

Group Shared {
   LD_Exe   = icc
   CC_Flags = -fpic
   LD_Flags = ${OCV_LD_Sh}
}

Group PThread {
   LD_Lib = -lpthread 
}

Group OpenMP {
   CC_Flags = -openmp ${OCV_OMP}
   FC_Flags = -openmp ${OCV_OMP}
   LD_Lib   = -lpthread 
}

include cpp-rule
include serial

Group Cdefine {
   NON_INTEGER_ENUM = TRUE
}

