#!/bin/csh -f
#
# SRTEST - test scripts
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

unalias *

set Package = scripts
source ../scripts/test-env

set Tests = ""
while ($#argv > 0)
   switch ($1)
      case -h:
           echo ""
           echo "Usage: srtest [-h] [<test>*]"
           echo "  h  this help message"
           echo ""
           exit(1);
      default:
           set Tests = ( $1 )
           breaksw
   endsw
   shift
end

@ Err = 0

flog $Log cd $TestDir

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# omit tests - usually in difficult CROSS_COMPILE situation

if ($RUN_TESTS == FALSE) then
   NoteD $Log ""
   NoteD $Log "SCRIPT TESTS ... omitted"

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# run the tests

else if (-e $RootDir/score/scstd.h) then

   NoteD $Log ""
   NoteD $Log "SCRIPT TEST ..."

   if ("$Tests" == "") then
      set Tests = ""
      set Tests = ($Tests subr)
   endif

   foreach i ($Tests)
      $SrcDir/tests/$i
      if ($status == 1) then
         set ERROR = TRUE
      endif
   end

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

# CLEAN UP - we are all done now

   $TEST_CHECK -n SCRIPT -e $ERROR clean

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

endif

$TEST_CHECK -e $ERROR fin

exit($status)

