#!/bin/csh -f
#
# SCS-REMOVE - remove from repository whether GIT, CVS or SVN
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

unalias *

set ldir = `dirname $0`
if ("$ldir" == ".") then
   set ldir = $cwd
endif
set scsi = ( `$ldir/which-scs` )
unset ldir

switch ($scsi[1])
   case git:
        git rm $argv
        breaksw

   case cvs:
        setenv CVS_RSH  ssh
        rm -f $argv
        cvs remove $argv
        breaksw

   case svn:
        svn remove $argv
        breaksw
endsw

exit($status)
