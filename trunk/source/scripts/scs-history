#!/bin/csh -f
#
# SCS-HISTORY - repository history whether GIT, CVS or SVN
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

unalias *

set gitd = ( `where-git` )

if (-d $gitd[1]) then

   pushd $gitd[1] >& /dev/null

#   set opt = ( --reverse -20 )
   set opt = ( --reverse )
   if ($#argv > 0) then
      set opt = ( $argv )
   endif

   git log --reverse $opt |& cat

   popd >& /dev/null

else if (-d CVS) then

   cvs history $argv

else if (-d .svn) then

   svn history $argv

endif

exit($status)
