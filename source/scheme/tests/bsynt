#!/bin/csh -f
#
# BSYNT - SCHEME Basis syntax tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           BASIS SYNTAX TESTS

#--------------------------------------------------------------------------

   if (($do_syntax == 0) && (-d $RootDir/scheme/syntax/m)) then
      NoteD $Log ""
      NoteD $Log -n "                    SCHEME Basis Syntax Test ..... "
      Note $Log ""

      flog $Log cp $FilesDir/shmtst.m .

      set UTime = `$TIMER -r`
      if ("$Valgrind" == "") then
         $CFE $BinDir/scheme -e -l shmtst.m >! shmtst.res
         diff shmtst.res $FilesDir/ref/shmtst >! shmtst.res.diff
         set xstatus = $status
      else
         ftee $Log $Valgrind $BinDir/scheme -e -l shmtst.m    |& \
         grep "ERROR SUMMARY:"                                |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         flog $Log $RM $Tmp
      endif
      set ETime = `$TIMER -b $UTime`

      if ($xstatus == 0) then
         NoteD $Log "PASSED ($ETime)"
         flog $Log rm -f shmtst.res shmtst.res.diff shmtst.m
      else
         NoteD $Log "FAILED ($xstatus/$ETime)"
         set Err = 1
      endif
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($Err)
