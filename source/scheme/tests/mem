#!/bin/csh -f
#
# MEM - SCHEME memory tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SCHEME Memory Test ........... "
set exe = $BinDir/scheme

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log pwd
   flog $Log cp $FilesDir/mmtst.scm .

   set opt = ( -e -l $FilesDir/mmtst.scm )
   if ("$Valgrind" == "") then
      flog $Log $cfe $exe $opt
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe $opt        |& \
      grep "ERROR SUMMARY:"                |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   set rpf = ( $rpf '#tmp#' mmtst.scm )

$TEST_CHECK part -a mem -e $xstatus -rpf "$rpf" none

exit($status)
