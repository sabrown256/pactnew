#!/bin/csh -f
#
# MASTER - ULTRA master test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           MASTER TEST

#--------------------------------------------------------------------------

   set msg = "ULTRA Master Test ............"
   set rpf = "none"

   NoteD $Log ""
   NoteD $Log -n "                    $msg "
   Note $Log ""

   set FAIL = "NO"
   flog $Log $RM ultest.log ultest.pdb ultest.asc ultest.err ultest.tmp

   set UTime = `$TIMER -r`
   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra -l $TDir/ultest.scm >& ultest.tmp)
      set xstatus = $status
   else
      ftee $Log $Valgrind $BinDir/ultra -e -r -x -q -s -l $TDir/ultest.scm  |& \
      grep "ERROR SUMMARY:"                                                          |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      flog $Log $RM $Tmp
   endif
 
   if ("$Valgrind" != "") then

   else if (($xstatus == 254) || ($xstatus == 255)) then

# any return status other than 0 is a crash
   else if ($xstatus != 0) then
      set xstatus = 253

   else
      flog $Log (grep -i "error" ultest.tmp > ultest.err)
      flog $Log /bin/ls -l ultest.err
      if (-z ultest.err) then
         set rpf = ( ultest.err )

         awk '(($1 != "%%CreationDate:") && !(($4 ~ /..:..:../) && ($5 ~ /199[0-9]/))) {print}' ultest.ps > ultest.ps.tmp
         flog $Log mv ultest.ps.tmp ultest.ps

         flog $Log $cfe $PSDIFF ultest.ps $TDir/ref/ultest.ps
         if ($status != 0) then
            set xstatus = 252
         else
            set xstatus = 0
         endif
      else
         set xstatus = 1
      endif
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a master -e $xstatus -rpf "$rpf" none

exit($status)
