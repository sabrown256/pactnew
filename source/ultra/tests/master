#!/bin/csh -f
#
# MASTER - ULTRA master test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "ULTRA Master Test ............ "
set exe = $BinDir/ultra

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log $RM ultest.log ultest.pdb ultest.asc

   set opt = ( -l $TDir/ultest.scm )
   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra $opt >&! ultest.tmp)
      set xstatus = $status
      if ($xstatus == 0) then
         flog $Log (grep -i "error" ultest.tmp >&! ultest.err)
         flog $Log /bin/ls -l ultest.err
         if (-z ultest.err) then
            set rpf = ( ultest.err )

            awk '(($1 != "%%CreationDate:") && !(($4 ~ /..:..:../) && ($5 ~ /199[0-9]/))) {print}' ultest.ps > ultest.ps.tmp
            flog $Log mv ultest.ps.tmp ultest.ps

            flog $Log $cfe $PSDIFF ultest.ps $RefDir/ultest.ps
            if ($status != 0) then
               set xstatus = 252
            else
               set xstatus = 0
            endif
         else
            set xstatus = 1
         endif
      endif
   else
      ftee $Log $Valgrind $exe -e -r -x -q -s $opt    |& \
      grep "ERROR SUMMARY:"                           |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif
 
   set rpf = ( $rpf ultest.log ultest.pdb ultest.asc ultest.err ultest.tmp )

$TEST_CHECK part -a master -e $xstatus -rpf "$rpf" none

exit($status)
