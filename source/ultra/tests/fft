#!/bin/csh -f
#
# FFT - ULTRA FFT test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           FFT TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    ULTRA FFT Test ............... "
   Note $Log ""

   flog $Log $RM ulfft.log ulfft.err

   set rpf = none

   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra -l $TDir/ulfft.scm >& ulfft.log)
      set xstatus = $status
      flog $Log (grep -i "error" ulfft.log > ulfft.err)
   else
      ftee $Log $Valgrind $BinDir/ultra -e -r -x -q -s -l $TDir/ulfft.scm  |& \
      grep "ERROR SUMMARY:"                                                |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = $Tmp
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a fft -e $xstatus -rpf "$rpf" none

exit($status)
