#!/bin/csh -f
#
# IO - ULTRA I/O test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "ULTRA I/O Test ............... "
set exe = $BinDir/ultra
set opt = ( -l $TDir/uliot.scm )
set io  = flog

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra $opt >& uliot.log)
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe -e -r -x -q -s $opt     |& \
      grep "ERROR SUMMARY:"                            |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = $Tmp
   endif

$TEST_CHECK part -a io -e $xstatus -rpf "$rpf" none

exit($status)
