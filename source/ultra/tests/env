#!/bin/csh -f
#
# ENV - ULTRA environment test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "ULTRA Env Test ............... "
set exe = $BinDir/ultra

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log $RM ulenv.log

   unsetenv SCHEME
   unsetenv ULTRA  
   setenv DO_RUN_SUBMIT_ENV

   if ("$Valgrind" == "") then
      flog $Log ($CFE $Ultra -n \(end\) >&! ulenv.log)
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe -e -n -s \(end\)    |& \
      grep "ERROR SUMMARY:"                        |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif
   
   set rpf = ( $rpf ulenv.log )

$TEST_CHECK part -a env -e $xstatus -rpf "$rpf" none

exit($status)

