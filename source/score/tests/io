#!/bin/csh -f
#
# IO - test I/O facilities in SCORE
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

NoteD $LogF ""
NoteD $LogF -n "                    SCORE I/O Test .............. "
NoteD $LogF ""

set UTime = `$TIMER -r`
flog $LogF pushd $SrcDir
flog $LogF $MAKE io
set xstatus = $status
flog $LogF popd

if ($xstatus == 0) then
   if ("$Valgrind" == "") then
      ftee $LogF $CFE $BinDir/sciots
      set xstatus = $status
   else
      ftee $LogF $Valgrind $BinDir/sciots   |& \
      grep "ERROR SUMMARY:"                 |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      flog $LogF $RM $Tmp
   endif
endif

set ETime = `$TIMER -b $UTime`

rm -f sciots.txt

if ($xstatus != 0) then
   NoteD $LogF "                    SCORE I/O Test .............. FAILED ($xstatus/$ETime)"
#   set Err = 1
else
   NoteD $LogF "                    SCORE I/O Test .............. PASSED ($ETime)"
endif

exit($Err)

