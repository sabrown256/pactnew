# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                           UNIT TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    Unit Tests ... "
   Note $Log ""

   set UTime = `$TIMER -r`
   flog $Log $CFE $PYTHON $RootDir/pya/tests/unittests.py
   set xstatus = $status
   set ETime   = `$TIMER -b $UTime`
   
   if ($xstatus == 0) then
      NoteD $Log "OK ($xstatus/$ETime)"
   else
      NoteD $Log "FAILED ($xstatus/$ETime)"
#      set Err = 1
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK -a unit -e $Err part

exit($status)
