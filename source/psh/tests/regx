#!/bin/csh -f
#
# REGX - test pattern matching
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "REGX Test ...................... "

while ($#argv > 0)
   switch ($1)
      case -h:
           echo ""
           echo "Usage: pco [-h]"
           echo "  h  this help message"
           echo ""
           exit(1);
      default:
           breaksw
   endsw
   shift
end

NoteD $Log ""
NoteD $Log -n "                    $msg"
Note $Log ""

set ref  = ../../tests/ref/mats
set tdir = $cwd

flog $Log pushd ../..
flog $Log ./ccw -I. tests/mats.c -o $tdir/mats
flog $Log popd

flog $Log (./mats >&! mats.res)

if (-f $ref) then
   flog $Log diff mats.res $ref
   set xstatus = $status
else
   flog $Log cp mats.res $ref
   set xstatus = $status
endif

flog $Log set rpf = ( $rpf mats )

$TEST_CHECK part -a regx -e $xstatus -rpf "$rpf" none

exit($status)
