Group OCV {
   Bits   = [ _env_ = Bits ;                 # address bit size
              *     = -m* ]
   PIC    = 
   StackP =
   RPath  = -Wl,-rpath,@
   LD     =
   CC_Cfg = clang
   CC_Sh  =  -fPIC
   CC_Sh += [ _env_ = Bits ;                 # address bit size
              *     = -m* ]
   Sh     = -shared
   ShLb   =
}

include compilers/clang

Tool MAKE {
   UseGNU = TRUE
}

