#
# PGI - define PGI compiler
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#


run analyze/rpath -a /usr/${LIB}
run analyze/rpath pgi

Tool CC {
   Exe      = pgcc
   Flags    = -Kieee
   Flags   += [ _env_ = STD_C ;             # C standard flags
                C89   = -c89 ;
                C99   = -c99 ;
                X89   = -c89 ;
                X99   = -c99 ]
   Flags   += ${OCV_Bits}
   Flags   += ${OCV_PIC}
   Flags   += [ _cmd_ = -p ;                # profiling
	        on    = -Mprof=func ]
   Debug    = -g -O0
   Optimize = -g -O1
   Version  = -V
}

Tool FC {
   Exe     = pgf90
   Flags   = -Mfree -Mnoref_externals
   Flags  += ${OCV_Bits}
   Flags  += ${OCV_PIC}
   Debug    = -g -O0
   Optimize = -g -O
   Version  = -V
}

Tool CXX {
   Exe       = pgCC
   Flags     = 
   Debug     = -g -O0
   Optimize  = -g -O1
   Version   = -V
}

Tool LD {
   RPath  = ${OCV_RPath}
   Flags  = ${OCV_LD}
   Flags += [ _cmd_ = -p ;                # profiling
	      on    = -Mprof=func ]
}

Group AF {
   PATTERN_WARN = "PGFTN-W- PGF90-W- PGC-W-"
   PATTERN_ERR  = "PGFTN-S- PGF90-S- PGC-S- PGC-F-"
}

Group Cfg {
   Use      = Std
   LD_Flags = ${LD_Flags}
}

Group Shared {
   LD_Exe   = ${OCV_LD_ShE}
   CC_Flags = ${OCV_CC_Sh}
   LD_Flags = ${OCV_LD_Sh}
}

Group PThread {
   LD_Lib = -lpthread 
}

Group OpenMP {
   CC_Flags += -mp
   LD_Flags += -mp
   LD_Lib    =
}

include cpp-rule
include serial
