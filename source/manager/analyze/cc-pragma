#!/bin/csh -f
#
# CC-PRAGMA - analyze the handling of _Pragma
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

set Me = $0
source $Me:h/common

Note $ALog "----- analyze/cc-pragma -----"
Note $ALog "Analyze: pragma handling"
Note $ALog ""

dbmget $ALog Cfe_CC_Exe^      \
             PACT_CC_VERSION

cat << EOF >! $Tmp.c
#define LOCKON(_l)         \
  _Pragma("omp critical")  \
  {
#define LOCKOFF(_l)  }
int main(int c, char **v)
   {static int first = 1;
    if (first)
       {LOCKON(foo);
	first = 0;
	LOCKOFF(foo);};
    return(0);}
EOF

flog $ALog $Cfe_CC_Exe $Tmp.c -o $Tmp $ccopt
if ($status == 0) then
   setenv HAVE_GOOD_OMP_PRAGMAS  TRUE
   NoteD $ALog "      proper pragma handling"
else
   setenv HAVE_GOOD_OMP_PRAGMAS  FALSE
   NoteD $ALog "      bad pragma handling"
endif

flog $ALog rm -f $Tmp.c $Tmp

# export the results
dbexp HAVE_GOOD_OMP_PRAGMAS

exit(0)

