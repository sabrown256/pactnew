#!/bin/csh -f
#
# IPC - analyze the IPC support
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

set Me = $0
source $Me:h/common

Separator $Log
Note $Log "Analyze: ipc"

# check for fork

cat << EOF >! $Tmp.c
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>
int main(int c, char **v)
{int pid, st, w;
 pid = fork();
 st  = waitpid(-1, &w, WNOHANG);
 return(0);}
EOF

set opt = ""
set opt = ( $opt $Cfe_CC_Flags )
set opt = ( $opt $Cfe_LD_Flags $Cfe_LD_RPath )

flog $ALog $Cfe_CC_Exe $Tmp.c -o $Tmp $opt
if ($status == 0) then
   setenv IPC_STD "POSIX"
   NoteD $ALog "      has posix process support"
else
   setenv IPC_STD "NOIPC"
   NoteD $ALog "      no process support"
endif

rm -f $Tmp.c $Tmp

# export the results
dbexp IPC_STD
#SetParent IPC_STD

exit(0)

