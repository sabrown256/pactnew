#
# PROGRAM-INIT - define PACT wide variables and give them default values
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

run analyze/default-bits
run analyze/rpath init

# PACT_CC_ refers to the Compiler Collection used to build PACT
# rather than COMPILER_ which is overloaded to the extreme
setenv PACT_CC_FAMILY    generic
setenv PACT_CC_EXE       `which cc`
setenv PACT_CC_VERSION   ""

setenv PACT_FC_FAMILY    generic
setenv PACT_FC_VERSION   ""

setenv C_STD             X99

# GOTCHA: this root may be different for CROSS_COMPILE
# need script to figure out root includes for given compiler
setenv RootInc  /usr/include

setenv LIB       lib

setenv SUFFIXES  '.i'

BuildSharedLibs = FALSE
FilterDir       =
WARN_PATTERN    =
ERR_PATTERN     =
SchemeSpokes    = netcdf
CSpokes         =
ThreadLibExt    =

Tool LD {
   SpokeDepLib =
}

# define some groups for analysis

# machine dependent graphics for PGS - e.g. X11
Group MDG {
   Inc   = ""
   Lib   = ""
   Pck   = ""
}

# machine dependent I/O for PDB - e.g. SQL
Group MDI {
   Inc   = ""
   Lib   = ""
   Pck   = ""
}

# other machine dependent packages for PACT - e.g. RL
Group MD {
   Inc   = ""
   Lib   = ""
   Pck   = ""
}

# Open MP group
Group OpenMP {
   SharedFnc = no
}

# distributed processing group
Group DP {
   Inc   = ""
   Lib   = ""
   RPath = /usr/lib
   Path  = /usr/bin
}

Group Z {
}

Group PNG {
}

Group JPEG {
}

Group X11 {
}

Group OGL {
}

Group QD {
}

Group SQL {
}

Group HDF {
   Inc   = ""
   Lib   = ""
   RPath = ""
   Path  = ""
}


