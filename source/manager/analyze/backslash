#
# BACKSLASH - analyze the treatment of backslash
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

Note $ALog "----- analyze/backslash -----"
Note $ALog "Analyze: CSH backslash handling"
Note $ALog ""

setenv BackSlash "\\"

set Tmp = "tmp-backslash"

echo $BackSlash >! $Tmp
if (`cat $Tmp` == "$BackSlash") then
   set BackSlash = "\"
endif

rm -f $Tmp

