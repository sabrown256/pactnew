#
# MPI - MPI feature
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

setenv REQUEST_MPI   TRUE

# NOTE: on BG/P MPIBin has to come after path to compiler
setenv PATH   ${PATH}:${MPIBin}

Group MPI {
   CC_Inc = ${IncMPI}
   LD_Lib = ${LibMPI}
}

Group DP {
   Inc =? ${MPI_CC_Inc}
   Lib += ${MPI_LD_Lib}
}

Tool CC {
   Exe    =? ${MPI_CC_Exe}
   Linker =? ${MPI_CC_Linker}
   Flags  += ${MPI_CC_Flags}
}

Tool FC {
   Exe    =? ${MPI_FC_Exe}
   Linker =? ${MPI_FC_Linker}
   Flags  += ${MPI_FC_Flags}
}

Tool LD {
   Exe   =? ${MPI_LD_Exe}
   Flags += ${MPI_LD_Flags}
}

