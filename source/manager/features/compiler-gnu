#
# COMPILER-GNU - define basic variables to use GNU compilers
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

run features/rpath -a /usr/X11R6/${LIB}:/usr/${LIB}
run features/rpath gnu

WARN_PATTERN = ":+sp+warning:"
ERR_PATTERN  = ":+sp+error:"

Tool CC {
   Exe       = gcc
   Flags     = -ffloat-store
   Flags    += [ _env_ = COMPILER_GNU_VERSION ; # compiler version flags
                 4.*   = -fsignaling-nans ]
   Flags    += [ _env_ = Bits ;                 # address bit size
                 32    = -m32 ;
                 64    = -m64 -fPIC ]
   Flags    += [ _cmd_ = -p ;                   # profiling
	         on    = -pg ]
   Flags    += [ _cmd_ = -cov ;                 # coverage analysis
	         on    = -fprofile-arcs -ftest-coverage ]
   Debug     = -g -O0 -Wall
   Optimize  = -g -O -Wunused
   Optimize += [ _cmd_ = -tune @ ;              # optimization tuning
                 *     = -mtune=* ]
   Version   = -v
}

Tool FC {
   Exe       = gfortran
   Flags     = -ffloat-store
   Flags    += [ _env_ = COMPILER_GNU_VERSION ; # compiler version flags
                  4.*   = -fsignaling-nans ]
   Flags    += [ _env_ = Bits ;                 # address bit size
                 32    = -m32 ;
                 64    = -m64 -fPIC ]
   Flags    += [ _cmd_ = -p ;                   # profiling
	         on    = -pg ]
   Flags    += [ _cmd_ = -cov ;                 # coverage analysis
	         on    = -fprofile-arcs -ftest-coverage ]
   Debug     = -g -O0 -Wall
   Optimize  = -g -O -Wunused
   Version   = -v
}

Tool LD {
   RPath    = -Wl,-rpath,@
   Flags   += [ _cmd_ = -p ;                 # profiling
	        on    = -pg ]
   Flags   += [ _cmd_ = -cov ;               # coverage analysis
	        on    = -lgcov ]
   Lib      = -lc
}

Tool Lex {
   Flags  = -w
   Flags += [ _env_ = Bits ;                 # address bit size
              32    = -m32 ;
              64    = -m64 -fPIC ]
}

Group Std {
   CC_Flags = ${CC_Flags}
   FC_Flags = ${FC_Flags}
   LD_Flags = ${LD_Flags}
}

Group Cfg {
   Use    = Std
   CC_Exe = gcc
}

Group OpenMP {
   CC_Flags = -fopenmp
   LD_Flags = -fopenmp
   LD_Lib   = -lgomp
}

Group Shared {
   LD_Exe    = gcc
   CC_Shared = -fPIC
   LD_Shared = -shared
}

Group PThread {
   LD_Lib = -lpthread 
}

include cpp-rule
include serial

