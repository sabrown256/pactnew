include shared

# statically link dependent libraries
include features/dls

Tool CC {
   Exe      =? ${PY_CC_Exe}
   Debug    =? ${PY_CC_Debug}
   Optimize =? ${PY_CC_Optimize}
   Linker   =? ${PY_CC_Linker}
   Flags    =? ${PY_CC_Flags}
}

Tool FC {
   Exe    =? ${PY_FC_Exe}
   Linker =? ${PY_FC_Linker}
   Flags  =? ${PY_FC_Flags}
}

Tool LD {
   Exe   =? ${PY_LD_Exe}
   Flags =? ${PY_LD_Flags}
}

Tool AR {
   Exe   =? ${PY_AR_Exe}
   Flags =? ${PY_AR_Flags}
}

Group Cfg {
   CC_Exe    =? ${PY_CC_Exe}
   FC_Exe    =? ${PY_FC_Exe}
   CC_Linker =? ${PY_CC_Linker}
}

