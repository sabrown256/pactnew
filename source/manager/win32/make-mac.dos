#
# MAKE-MACROS.DOS - PACT Makefile macros under DOS
#

# --------------------------------------------------------------------------

#		       MODULE INDEPENDENT MACROS

# --------------------------------------------------------------------------

#
# the standard places
#
BinDir = ${SysDir}\bin
LibDir = ${SysDir}\lib
IncDir = ${SysDir}\include
ScmDir = ${SysDir}\scheme

#
# install library
#
libinstall : ${TGTLib}
	cp ${TGTLib} ${LibDir}\${TGTLib}
#
# install includes
#
incinstall : ${TGTInc}
	cp ${TGTInc} ${IncDir}

#
# install binaries
#
bininstall : ${TGTBin}
	cp ${TGTBin} ${BinDir}

#
# install binaries
#
scminstall : ${TGTScm}
	cp ${TGTScm} ${ScmDir}

#
# clean up the directory
#
clean :
	rm -f ${CleanFiles}
#
# remove binaries and libraries
#
remove :
	make -i clean
	rm -f *.o *.lib
