setenv PATH  ${PATH}:/bgsys/drivers/ppcfloor/gnu-linux/powerpc64-bgq-linux/bin

run std/use-compiler /usr/local/bin/mpicc

# specify DP group directly for BG/Q since there is no variation
Group DP {
   Inc   = -I/bgsys/drivers/ppcfloor/comm/gcc/include
   Lib   = -lmpich
   RPath = /bgsys/drivers/ppcfloor/comm/gcc/lib
   Path  = /bgsys/drivers/ppcfloor/comm/gcc/bin
}

setenv RootInc /bgsys/drivers/ppcfloor/gnu-linux/powerpc64-bgq-linux/sys-include

include 64-bit
include compilers/gnu-bgp

including features/c99

include no-x11
include no-sql
include no-jpeg
include no-png
include no-libz
include features/bgq

