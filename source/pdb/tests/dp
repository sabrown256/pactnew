#!/bin/csh -f
#
# DP - PDB distributed parallel test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB Distributed Parallel Test ......"

if ("$MPI" != "") then
   NoteD $Log ""
   NoteD $Log "                    $msg"
   NoteD $Log ""

   flog $Log pushd $SrcDir
   flog $Log $MAKE dp
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         ERROR Building Distributed Parallel Tests"
      NoteD $Log "                    ${msg}FAILED"

   else
      set exe = $BinDir/tpddp
      set opt = ( -v $tst )

      if (-x $PFE) then
         flog $Log $PFE -dr -p 2 -t 0 $exe $opt
         ftee $Log $PFE -p 2 -t 0 $exe $opt
         set xstatus = $gstatus[1]
      else
         Note $Log "No MPI - test omitted"
         set xstatus = 255
      endif

      $TEST_CHECK part -a dp -e $xstatus -x $exe "$msg"

      set xstatus = $status

   endif
endif

exit($xstatus)
