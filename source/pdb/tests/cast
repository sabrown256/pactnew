#!/bin/csh -f
#
# CAST - PDB cast test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB Recursive Cast Test ............ "
set exe = $BinDir/pdrcts

NoteD $Log ""
NoteD $Log -n "                    $msg"
Note $Log ""

set opt = ( -v $tst foo.pdb )
if ("$Valgrind" == "") then
   ftee $Log $CFE $exe $opt
   set xstatus = $status
else
   ftee $Log $Valgrind $exe $opt           |& \
   grep "ERROR SUMMARY:"                   |& \
   awk '{ print $4 }'   >&! $Tmp
   set xstatus = `cat $Tmp`
   set rpf     = ( $rpf $Tmp )
endif

set rpf = ( $rpf foo.pdb )

$TEST_CHECK part -a cast -e $xstatus -x $exe -rpf "$rpf" none

exit($status)
