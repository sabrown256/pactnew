#!/bin/csh -f
#
# ATTR - PDB attribute test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB Attribute Test ................. "
set rpf = "none"
set exe = $BinDir/pdatst

set tst = $1

NoteD $LogF ""
NoteD $LogF -n "                    PDB Attribute Test ................. "
Note $LogF ""

if ("$Valgrind" == "") then
   ftee $LogF $CFE $exe -v $tst
   set xstatus = $status
else
   ftee $LogF $Valgrind $exe -v $tst          |& \
   grep "ERROR SUMMARY:"                      |& \
   awk '{ print $4 }'   >&! $Tmp
   set xstatus = `cat $Tmp`
   set rpf     = ( $rpf $Tmp )
endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

$TEST_CHECK part -a attr -e $xstatus -x $exe -rpf "$rpf" none

exit($status)

