#!/bin/csh -f
#
# FD - PDB file descriptor leak test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDB FD Leak ........................ "
set rpf = "none"
set exe = $BinDir/pdfdts

if ("$OS" != AIX) then
   if ("$Valgrind" == "") then

      set tst = $1

      NoteD $LogF ""
      NoteD $LogF -n "                    $msg"
      Note $LogF ""

      flog $LogF $CFE $exe
      set xstatus = $status

      $TEST_CHECK part -a fd -e $xstatus -x $exe none

   endif
endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($status)
