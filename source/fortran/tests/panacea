#!/bin/csh -f
#
# PANACEA - PANACEA API tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common


set msg = "PANACEA API Test ..................."
set exe = $BinDir/pathts

NoteD $Log ""
NoteD $Log "                    $msg"

flog $Log pushd $SrcDir
flog $Log $MAKE panacea
set xstatus = $status
flog $Log popd

if ($xstatus != 0) then
   NoteD $Log ""
   NoteD $Log "                         Can't build PANACEA API Tests ($xstatus)"

else
   set opt = ( -c 2 )
   if ("$Valgrind" == "") then
      ftee $Log $CFE $exe $opt
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe $opt         |&  \
      grep "ERROR SUMMARY:"                 |&  \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = $Tmp
   endif
endif

$TEST_CHECK part -a panacea -e $xstatus -x $exe -rpf "$rpf" "$msg"

exit($status)
