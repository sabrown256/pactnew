# dummy target lib just to get to LibAction
TGTLib = ${LibDir}/libpy.a

RemoveAction = @./psys remove
LibAction    = @./psys devlib
IncAction    = @./psys incinstall

#--------------------------------------------------------------------------

generate:
	@./psys generate

link:
	@./psys link
	cp py-install ${BinDir}

install:
	@./psys link

sharedlib:
	@./psys sharedlib

inform :
	@./psys inform

test :
	@./psys test


