#!/bin/csh -f
#
# PGS - SX PGS test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PGS Test .................. "
set exe = $BinDir/sx
set opt = ( -e -r -s $ZeroSpace -l $RootDir/sx/tests/sxpgs.scm )
set io  = flog

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   if ("$Valgrind" == "") then
      flog $Log ($exe $opt > sxpgs.res)
      set xstatus = $status
   else
      ftee $Log $Valgrind $exe $opt    |& \
      grep "ERROR SUMMARY:"            |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   if ($xstatus == 0) then
      flog $Log $cfe $PSDIFF sxpgs.ps $RootDir/sx/tests/ref/sxpgs.ps
      set xstatus = $status
   endif

   set rpf = ( $rpf sxpgs.ps )

$TEST_CHECK part -a pgs -e $xstatus -rpf "$rpf" none

exit($status)
