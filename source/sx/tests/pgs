#!/bin/csh -f
#
# PGS - SX PGS test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PGS Test .................. "
set exe = $BinDir/sx

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   set opt = ( -l $RootDir/sx/tests/sxpgs.scm )
   if ("$Valgrind" == "") then
      flog $Log ($SX $opt > sxpgs.res)
      set xstatus = $status
      if ($xstatus == 0) then
         flog $Log $cfe $PSDIFF sxpgs.ps $RootDir/sx/tests/ref/sxpgs.ps
         set xstatus = $status
      endif
   else
      ftee $Log $Valgrind $exe -e -r -s $opt    |& \
      grep "ERROR SUMMARY:"                     |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   set rpf = ( $rpf sxpgs.ps )

$TEST_CHECK part -a pgs -e $xstatus -rpf "$rpf" none

exit($status)
