#!/bin/csh -f
#
# OPER - SX operator tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX OPER Test ................. "
set exe = $BinDir/sx

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   if ("$MPI" == "") then
      set opt = ( -l $RootDir/sx/tests/sxoper.scm )
      if ("$Valgrind" == "") then
         flog $Log ($PDBView $opt >&! sxoper.res)
         set xstatus = $status
      else
         ftee $Log $Valgrind $exe -e -p -q $opt     |& \
         grep "ERROR SUMMARY:"                      |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         set rpf     = ( $rpf $Tmp )
      endif

      set rpf = ( $rpf sxoper.res arr.dat sxoper*.ps )

   endif

$TEST_CHECK part -a oper -e $xstatus -rpf "$rpf" none

exit($status)
