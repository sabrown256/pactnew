#!/bin/csh -f
#
# MESH - SX PDBView mesh test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PDBView Mesh Test ............ "
set exe = $BinDir/sx
set opt = ( -p -e -q $ZeroSpace -l $FilesDir/pdbvmesh.scm )
set io  = pdbvmesh.res

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   flog $Log rm -f pdbvmesh*.diff pdbvmesh*.ps

   source ../../../scripts/test-run

   if ($xstatus == 0) then
      foreach i (pdbvmesh.ps)
         if (-f $FilesDir/ref/$i) then
            flog $Log ($CFE $PSDIFF $i $FilesDir/ref/$i >&! $i.diff)
            @ st = $status
            @ xstatus = $xstatus + $st
            Note $Log "Test $i:r status $st"
         endif
      end
   endif

   set rpf = ( $rpf pdbvmesh.res.diff pdbvmesh.res pdbvmesh.ps pdbvmesh*.diff )

$TEST_CHECK part -a mesh -e $xstatus -dt $dt -rpf "$rpf" none

exit($status)
