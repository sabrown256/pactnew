#!/bin/csh -f
#
# IPLY - intersecting polygon test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PML Polygon Test .........."
set exe = $BinDir/sx
set rpf = none

   NoteD $Log ""
   NoteD $Log "                    $msg"

   foreach t (iply1 iply2)

      NoteD $Log -n "                       $t ..................... "
      Note $Log ""

      set opt = ( -p -e -q $ZeroSpace -l $FilesDir/$t.scm )
      set io  = $t.res

      flog $Log rm -f $t*.diff $t*.ps

      source ../../../scripts/test-run

      if ($xstatus == 0) then
         foreach i ($t.ps)
            if (-f $FilesDir/ref/$i) then
               flog $Log ($CFE $PSDIFF $i $FilesDir/ref/$i >&! $i.diff)
               @ st      = $status
               @ xstatus = $xstatus + $st
               Note $Log "Test $i:r status $st"
            endif
         end
      endif

      if ($xstatus != 0) then
         NoteD $Log "ng ($dt)"
         @ nerr = $nerr + $1
      else
         NoteD $Log "ok ($dt)"
      endif

   end

$TEST_CHECK part -a iply -e $nerr -dt $dt -rpf "$rpf" "$msg"

exit($status)

