#!/bin/csh -f
#
# IPLY - intersecting polygon test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PML Polygon Test .......... "
set exe = $BinDir/sx

   NoteD $Log ""
   NoteD $Log "                    $msg"

   foreach t (iply1 iply2)

      NoteD $Log -n "                       $t ..................... "
      Note $Log ""

      set opt = ( -p -e -q $ZeroSpace -l $RootDir/sx/tests/$t.scm )
      set io  = $t.res

      flog $Log rm -f $t*.diff $t*.ps

      set bt = `$TIMER -r`
      source ../../../scripts/test-run

      if ($xstatus == 0) then
         foreach i ($t.ps)
            if (-f $RootDir/sx/tests/ref/$i) then
               flog $Log ($CFE $PSDIFF $i $RootDir/sx/tests/ref/$i >&! $i.diff)
               @ st = $status
               @ xstatus = $xstatus + $st
               Note $Log "Test $i:r status $st"
            endif
         end
         set et = `$TIMER -b $bt`

         if ($xstatus != 0) then
            NoteD $Log "ng ($et)"
            @ nerr = $nerr + 1
         else
            NoteD $Log "ok ($et)"
         endif
      endif

   end

$TEST_CHECK part -a iply -e $nerr -rpf "$rpf" "$msg"

exit($status)

