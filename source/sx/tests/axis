#!/bin/csh -f
#
# AXIS - SX AXIS test
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "SX PGS Axis Test ............. "
set exe = $BinDir/sx

   NoteD $Log ""
   NoteD $Log -n "                    $msg"
   Note $Log ""

   set opt = ( -l $TDir/sxaxs.scm )
   if ("$Valgrind" == "") then
      flog $Log $SX $opt
      set xstatus = $status
      if ($xstatus == 0) then
         flog $Log ( $CFE $PSDIFF sxaxs.ps $RefDir/sxaxs.ps > sxaxs.ps.diff )
         set xstatus = $status
      endif
   else
      ftee $Log $Valgrind $exe -e -r -s $opt     |& \
      grep "ERROR SUMMARY:"                      |& \
      awk '{ print $4 }'   >&! $Tmp
      set xstatus = `cat $Tmp`
      set rpf     = ( $rpf $Tmp )
   endif

   set rpf = ( $rpf sxaxs.* )

$TEST_CHECK part -a axis -e $xstatus -rpf "$rpf" none

exit($status)
