#!/bin/csh -f
#
# SOLV - PML matrix solver tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

#--------------------------------------------------------------------------

#                               PML SOLVER TEST

#--------------------------------------------------------------------------

   NoteD $Log ""
   NoteD $Log -n "                    PML Solver Test ........ "

   set FAIL = "NO"

   flog $Log pushd $SrcDir
   flog $Log $MAKE icsolv
   set TStatus = $status
   flog $Log popd

   set UTime = `$TIMER -r`

   if ($TStatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PML Solver Test Program"
      set xstatus = $TStatus
   else
      if ("$Valgrind" == "") then
         flog $LogF $CFE $BinDir/mlicts
         set xstatus = $status
      else
         flog $Log $Valgrind $BinDir/mlicts
         set xstatus = $status
      endif
      if ($xstatus != 0) then
         NoteD $Log ""
         NoteD $Log "                         Error in Solver Test Program"
      endif
   endif

   set ETime = `$TIMER -b $UTime`

   if ($xstatus != 0) then
      NoteD $Log "                    PML Solver Test ........ FAILED ($ETime)"
      @ Err = 1
   else
      NoteD $Log "PASSED ($ETime)"
   endif

#--------------------------------------------------------------------------
#--------------------------------------------------------------------------

exit($Err)
