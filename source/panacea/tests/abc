#!/bin/csh -f
#
# ABC - test simple PANACEA code
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PANACEA ABC Test .............. "

if (-d $RootDir/panacea/abc) then
   NoteD $LogF ""
   NoteD $LogF -n "                    Building PANACEA ABC Test ....."
   Note $LogF ""

   setenv SESSION_CONFIG `cfgman use`
   flog $LogF pushd $SrcDir/abc/builder
   flog $LogF dsys remove
   flog $LogF dsys config
   flog $LogF dsys build
   set xstatus = $status
   flog $LogF popd

   if ($xstatus != 0) then
      NoteD $LogF ""
      NoteD $LogF "                         Can't build PANACEA ABC Test"
   else
      NoteD $LogF " DONE"

      NoteD $LogF ""
      NoteD $LogF "                    $msg"

      flog $LogF pushd $SrcDir/abc/builder
      if ("$Valgrind" == "") then
         ftee $LogF dsys test
         set xstatus = $status
      else
         ftee $LogF dsys test -vg
         set xstatus = $status
      endif
      flog $LogF popd

      if ($xstatus == 0) then
         flog $LogF pushd $SrcDir/abc/builder
         flog $LogF dsys remove
         flog $LogF popd
      endif
   endif
endif

$TEST_CHECK part -a abc -e $xstatus "$msg"

exit($status)

