#
# pre-Make for S
#
# Files and Directories
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

include ../dev/${SYS_ID}/include/pre-Make.defs

TGTBin = none
TGTExe = ${DevBin}/s
TGTLib = ${DevLib}/libs.a
TGTInc = ${Hdrs}

#
# Things upon which install depends (pact install)
#
DepLib     = 
InstallDep = ${Hdrs} ${TGTLib} ${TGTExe}
BinDep     = ${TGTLib} s.c
BinObj     = ${TGTLib} s.c

OD = DefaultG

#
# Compiler/Loader Options
#
CcFlags = -I${DevInc} -I${IncDir} ${MDInc} ${MDGInc}
LdFlags = -L${DevLib} -L${LibDir} ${LDFLAGS}

PactLibs = ${LSX} ${LSCHEME} ${LPANACEA} ${LPGS} ${LPPC} ${LPDB} ${LPML} ${LSCORE} ${MDLibs}
SysLibs  = -lmesh -llag \
           -lmisc
Libs     = ${TGTLib} ${SysLibs} ${PactLibs} ${MDGLib} ${MDLib} -lm

#
# Files to remove in directory clean (make clean)
#
CleanFiles = *~ core #*#

#
# Code Units
#
Hdrs = s.h

Objs = scmd.o

ArObjs = ${TGTLib}(scmd.o)

${Objs} : ${Hdrs}
${TGTLib} : ${Hdrs}


${TGTExe} : ${BinDep}
	${CLD} ${LdFlags} s.c -o ${TGTExe} ${Libs}

install : ${InstallDep}
	@cp ${Hdrs} ${DevInc}

lib :
	rm -f ${TGTLib}
	pact install
