#!/bin/csh -f
#
# GROT - PGS grotrian tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PGS Grotrian Test ...... "
set exe = $BinDir/gsgrts
set opt = ( -1 -d )
set io  = gsgrts.res

   NoteD $Log ""
   NoteD $Log -n "                    $msg"

   flog $Log pushd $SrcDir
   flog $Log $MAKE grotrian
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PGS Grotrian Test Program"
      NoteD $Log "                    ${msg}FAILED (-1)"
   else
      flog $Log rm -f gsgrts.res gsgrts.ps

      source ../../../scripts/test-run

      if ($xstatus == 0) then
         mv ps_test.ps gsgrts.ps
      endif

      set rpf = ( $rpf gsgrts.ps gsgrts.res )

   endif

$TEST_CHECK part -a grot -e $xstatus -x $exe -rpf "$rpf" none

exit($status)
