#!/bin/csh -f
#
# GROT - PGS grotrian tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PGS Grotrian Test ...... "
set rpf = "none"
set exe = $BinDir/gsgrts

   NoteD $Log ""
   NoteD $Log -n "                    $msg"

   flog $Log pushd $SrcDir
   flog $Log $MAKE grotrian
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PGS Grotrian Test Program"
      NoteD $Log "                    ${msg}FAILED (-1)"
      set Err = 1
   else
      flog $Log rm -f gsgrts.res gsgrts.ps

      if ("$Valgrind" == "") then
         $CFE $exe -1 -d > gsgrts.res
         set xstatus = $status
      else
         ftee $Log $Valgrind $exe -1 -d               |& \
         grep "ERROR SUMMARY:"                        |& \
         awk '{ print $4 }'   >&! $Tmp
         set xstatus = `cat $Tmp`
         set rpf     = ( $rpf $Tmp )
      endif

      if ($xstatus == 0) then
         mv ps_test.ps gsgrts.ps
      endif

      set rpf = ( $rpf gsgrts.ps gsgrts.res )

   endif

$TEST_CHECK part -a grot -e $xstatus -x $exe -rpf "$rpf" none

exit($status)
