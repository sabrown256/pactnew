#!/bin/csh -f
#
# MPEG - PGS MPEG tests
#
# Source Version: 3.0
# Software Release #: LLNL-CODE-422942
#
# include "cpyright.h"
#

source ../../tests/common

set msg = "PGS MPEG Test .........."

   NoteD $Log ""
   NoteD $Log "                    $msg"

   flog $Log pushd $SrcDir
   flog $Log $MAKE mpeg
   set xstatus = $status
   flog $Log popd

   if ($xstatus != 0) then
      NoteD $Log ""
      NoteD $Log "                         Can't build PGS MPEG Test Program"
      NoteD $Log "                    ${msg}FAILED"
   else
      flog $Log rm -f gsmpg1.mpg gsmpg2.mpg

      NoteD $Log -n "                        curve .............."
      set rpf = "none"
      set exe = $BinDir/gsmpgt1
      set opt = ""
      set io  = flog

      source ../../../scripts/test-run

      $TEST_CHECK part -a mpeg1 -e $xstatus -dt $dt -l -x $exe -rpf "$rpf" none

      @ nerr = $nerr + $status

      NoteD $Log -n "                        fill ..............."
      set rpf = "none"
      set exe = $BinDir/gsmpgt2
      set opt = ""
      set io  = flog

      source ../../../scripts/test-run

      $TEST_CHECK part -a mpeg2 -e $xstatus -dt $dt -l -x $exe -rpf "$rpf" none

      @ nerr = $nerr + $status

      set rpf = ( $rpf gsmpg1.mpg gsmpg2.mpg )
   endif

$TEST_CHECK part -a mpeg -e $nerr -rpf "$rpf" "$msg"

exit($status)
